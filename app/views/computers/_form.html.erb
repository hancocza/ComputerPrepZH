<%= form_with(model: computer, local: true) do |form| %>
  <% if computer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(computer.errors.count, "error") %> prohibited this computer from being saved:</h2>

      <ul>
        <% computer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class = "form-group">
        <%= form.label :name, "Computer Name" %>
        <%= form.text_field :name, id: :computer_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-2">
      <div class="form-group">
        <%= form.label :barcode, "Barcode" %>
        <%= form.number_field :barcode, id: :computer_barcode, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :description, "Storage Location" %>
        <%= form.text_field :description, id: :computer_description, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-3">
      <div class="form-group">
        <%= form.label :make, "Make" %>
        <%= form.text_field :make, id: :computer_make, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <%= form.label :model, "Model" %>
        <%= form.text_field :model, id: :computer_model, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
     <div class="form-group">
      <%= form.label :department, "Department" %>
      <%= form.select :department, options_for_select(["BIO", "BMS", "CHM", "CMB", "GEO", "PHY", "SCI"], selected: (@computer ? computer.department : "BIO")),{}, class: "form-control" %>
     </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-4 text-right">
      <div class="actions">
        <%= link_to 'Cancel', computers_path, class: "btn btn-outline-danger my-2 my-sm-2" %>
      </div>
    </div>
    <div class = "col-md-2 text-right">
      <div class = "actions">
        <%= form.submit class: "btn btn-outline-primary my-2 my-sm-2" %>
      </div>
     </div>
  </div>
</div>
<% end %>
