<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</strong>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-2">
     <div class="form-group">
      <%= form.label :department, "Department" %>
      <%= form.select :department, options_for_select(["BIO", "BMS", "CHM", "CMB", "GEO", "PHY", "SCI"], selected: (@course ? course.department : "BIO")),{}, class: "form-control" %>
     </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class = "form-group">
        <%= form.label :name, "Course Name" %>
        <%= form.text_field :name, id: :course_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-5">
      <div class="form-group">
        <%= form.label :description, "Course Description" %>
        <%= form.text_field :description, id: :course_description, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-2">
      <div class="form-group">
        <%= form.label :sections, "# of Sections" %>
        <%= form.text_field :sections, id: :course_sections, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-3 text-right">
      <div class="actions">
        <%= link_to 'Cancel', courses_path, class: "btn btn-outline-danger my-2 my-sm-2" %>
      </div>
    </div>
    <div class = "col-md-2 text-right">
      <div class = "actions">
        <%= form.submit class: "btn btn-outline-primary my-2 my-sm-2" %>
      </div>
     </div>
  </div>
</div>
<% end %>