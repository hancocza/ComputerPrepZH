<p id="notice"><%= notice %></p>
<div class="container d-inline">
  <div class="row">
    <div class="col-md-2 text-left"> <h3><%= @course.department %></h3></div>
    <div class="col-md"><h1 style="display: inline-block"> <%= @course.name %> - <%= @course.description %> </h1></div>
    <div class="col-md-2 text-center">
      <h3>
        <strong >Sections:</strong>
        <br>
        <%= @course.sections %>
      <h3>
    </div>
    <div class="col-md-1 text-center">
       <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-outline-secondary my-2 my-sm-0" %>
    </div> 
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-25">Lab Name</th>
      <th class="w-25">Week Number</th>
      <th class="w-25">Date Range</th>
      <th class="w-25"><%= link_to'Add New Lab', new_lab_path, class: "btn btn-outline-primary my-2 my-sm-0" %></th>
    </tr>
  </thead>

  <tbody>
    <% @labs.each do |lab| %>
      <tr>
        <td class="w-25"><%= lab.name %></td>
        <td class="w-25"><%= lab.number %></td>
        <td class="w-25"><%= lab.startDate.strftime('%m/%d/%Y') %> - <%= lab.endDate.strftime('%m/%d/%Y') %></td>
        <td class="w-25"><%= link_to lab, class: "btn btn-outline-success my-2 my-sm-2" do %>
           Show
          <% end %>
          <%= link_to lab, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger my-2 my-sm-0" do %>
          Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>