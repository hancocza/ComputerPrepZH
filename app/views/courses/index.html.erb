<% if !notice.blank? %>
	<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 text-left">
      <h1 class="display-4" style="color: #0065a4">
        Courses
      </h1>
    </div>
    <div class="col-md-2 text-right">
      <%= link_to 'Add New Course', new_course_path, class: "btn btn-outline-primary my-2 my-sm-2" %>
    </div>
  </div>
</div>
    
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th class="w-25">Course</th>
      <th class="w-25">Description</th>
      <th class="w-25"># of Sections</th>
      <th class="w-25"></th>
      </tr>
    </thead>
    <tbody id ="table-data" >
      <% @courses.each do |course| %>
      <tr>
        <td class="w-25"><%= course.name %></td>
        <td class="w-25"><%= course.description %></td>
        <td class="w-25"><%= course.sections %></td>
        <td class="w-25 text-center">
          <%= link_to course, class: "btn btn-outline-success my-2 my-sm-2" do %>
           Show
          <% end %>
          <%= link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger my-2 my-sm-2" do %>
          Delete
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

